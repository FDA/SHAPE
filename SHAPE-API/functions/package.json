{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .ts './src'",
    "lint-fix": "eslint --fix --ext .ts './src'",
    "build": "npm run lint && tsc",
    "build-watch": "npm run lint && tsc --watch",
    "emulators": "GOOGLE_APPLICATION_CREDENTIALS='./__tests__/config/shape-dev-service-acct.json' firebase emulators:start",
    "serve": "npm run build && npm run emulators",
    "shell": "npm run build && firebase functions:shell",
    "token": "npx node src/token",
    "start": "npm run shell",
    "deploy": "firebase deploy --only 'functions:webApi'",
    "logs": "firebase functions:log",
    "test": "jest",
    "analyze": "source-map-explorer --no-border-checks './lib/**/*.js'"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "express": "^4.17.1",
    "express-validator": "^6.14.0",
    "firebase": "^9.9.3",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.21.0",
    "moment": "^2.29.1",
    "stream": "0.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.4",
    "@types/cookie-parser": "^1.4.2",
    "@types/jest": "^28.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^0.2.0",
    "isomorphic-fetch": "^3.0.0",
    "tslint": "6.1.3",
    "jest": "^28.1.3",
    "source-map-explorer": "^2.5.2",
    "ts-jest": "^28.0.8",
    "typescript": "^4.6.2"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/src/**/*.ts",
      "!**/node_modules/**",
      "!**/lib/**"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "globals": {
      "__BASE_URL__": "",
      "__STORAGE_URL__": "",
      "__AUTH_URL__": "",
      "__USERNAME__": "",
      "__PASSWORD__": "",
      "__DEV_USERNAME__": "",
      "__DEV_PASSWORD__": "",
      "__SERVICE_ACCOUNT__": "",
      "__FIREBASE_CONFIG__": "../src/firebase-connect.json"
    }
  },
  "private": true
}
